{
    "mission": "aws cluster network activity monitoring",
    "situation": {
        "targets": [ "MACOS", "VBOX" ],
        "definitions": {
            "MACOS": {
                "name": "MacBook Pro",
                "addr": [ "" ],
                "cred": "EXEC",
                "prot": "EXEC",
                "sys": [ "MACOS", "UNIX" ]
            },
            "VBOX": {
                "name": "VBox CentOS 7.4",
                "addr": [ "127.0.0.1:2222" ],
                "cred": "CENTOS7",
                "prot": "SSH",
                "sys": [ "LINUX" ]
            }
        },
        "credentials": {
            "EXEC": {
                "user": "",
                "pass": "",
                "cert": ""
            },
            "CENTOS7": {
                "user": "sbarnes",
                "pass": "#donthackmebro",
                "cert": ""
            }
        }
    },
    "execution": {
        "tasks": {
            "LINUX_CPU_USE": {
                "active": true,
                "sys": "LINUX",
                "desc": [ "total cpu use" ],
                "task": "LINUX_GREP",
                "vars": [
                    [ " " ]
                ],
                "reports": [
                    {
                        "type": "RAW",
                        "xform": "*1",
                        "units": "%",
                        "widget": "gauge"
                    }
                ]
            },
            "LINUX_NET_BYTES": {
                "active": true,
                "sys": "LINUX",
                "desc": [ "network enp0s3 recv", "network enp0s3 send" ],
                "task": "UNIX_CAT",
                "vars": [
                    [ "/sys/class/net/", "enp0s3", "/statistics/", "rx_bytes" ],
                    [ "/sys/class/net/", "enp0s3", "/statistics/", "tx_bytes" ]
                ],
                "reports": [
                    {
                        "type": "RAW",
                        "xform": "*1",
                        "units": "B",
                        "widget": ""
                    },
                    {
                        "type": "RATE",
                        "xform": "*8/1000000",
                        "units": "Mbps",
                        "widget": "sparkline"
                    }
                ]
            },
            "LINUX_NET_RTT_MS": {
                "active": false,
                "sys": "LINUX",
                "desc": [ "ping to 192.168.1.254" ],
                "task": "UNIX_PING",
                "vars": [
                    [ "192.168.1.254", "rtt" ]
                ],
                "reports": [
                    {
                        "type": "RAW",
                        "xform": "*1",
                        "units": "ms",
                        "widget": "sparkline"
                    }
                ]
            },
            "LINUX_PROCESS_UP": {
                "active": true,
                "sys": "LINUX",
                "desc": [ "GNOME display manager status" ],
                "task": "UNIX_PSGREP",
                "vars": [
                    [ "/usr/sbin/gdm" ]
                ],
                "reports": [
                    {
                        "type": "RAW",
                        "xform": "*1",
                        "units": "",
                        "widget": "indicator"
                    }
                ]
            },
            "LINUX_UPTIME_SEC": {
                "active": true,
                "sys": "LINUX",
                "desc": [ "system uptime" ],
                "task": "UNIX_CAT",
                "vars": [
                    [ "/proc/uptime", " | awk '{print $1}'", "", "" ]
                ],
                "reports": [
                    {
                        "type": "RAW",
                        "xform": "/86400",
                        "units": "days",
                        "widget": "text"
                    }
                ]
            },
            "MACOS_CPU_USE": {
                "active": true,
                "sys": "MACOS",
                "desc": [ "total cpu use" ],
                "task": "MACOS_TOP",
                "vars": [
                    []
                ],
                "reports": [
                    {
                        "type": "RAW",
                        "xform": "*1",
                        "units": "%",
                        "widget": "gauge"
                    }
                ]
            },
            "MACOS_NET_BYTES": {
                "active": true,
                "sys": "MACOS",
                "desc": [ "network en0 recv", "network en0 send" ],
                "task": "MACOS_NETSTAT",
                "vars": [
                    [ "en0", "7" ],
                    [ "en0", "10" ]
                ],
                "reports": [
                    {
                        "type": "RAW",
                        "xform": "*1",
                        "units": "B",
                        "widget": ""
                    },
                    {
                        "type": "DIFF",
                        "xform": "*1",
                        "units": "B",
                        "widget": ""
                    },
                    {
                        "type": "RATE",
                        "xform": "*8/1000000",
                        "units": "Mbps",
                        "widget": "sparkline"
                    }
                ]
            },
            "MACOS_NET_RTT_MS": {
                "active": true,
                "sys": "MACOS",
                "desc": [ "ping to google.com" ],
                "task": "UNIX_PING",
                "vars": [
                    [ "google.com", "round-trip" ]
                ],
                "reports": [
                    {
                        "type": "RAW",
                        "xform": "*1",
                        "units": "ms",
                        "widget": "sparkline"
                    }
                ]
            },
            "MACOS_UPTIME_SEC": {
                "active": true,
                "sys": "MACOS",
                "desc": [ "system uptime" ],
                "task": "MACOS_UPTIME_SEC",
                "vars": [
                     []
                ],
                "reports": [
                    {
                        "type": "RAW",
                        "xform": "/86400",
                        "units": "days",
                        "widget": "text"
                    }
                ]
            }
        },
        "definitions": {
            "LINUX_GREP": {
                "reqs": [ "awk", "grep" ],
                "vars": [ "#VAR1#" ],
                "type": "float64",
                "task": "grep 'cpu#VAR1#' /proc/stat | awk '{usage=($2+$4)*100/($2+$4+$5)} END {print usage}'"
            },
            "MACOS_NETSTAT": {
                "reqs": [ "awk", "netstat" ],
                "vars": [ "#VAR1#", "#VAR2#" ],
                "type": "uint64",
                "task": "netstat -ibn -I #VAR1# | awk '//{i++}i==2{print $#VAR2#;exit}'"
            },
            "MACOS_TOP": {
                "reqs": [ "awk", "top" ],
                "vars": [],
                "type": "float64",
                "task": "top -l 1 -n 0 | awk '/^CPU usage/ {print $3+$5;}'"
            },
            "MACOS_UPTIME_SEC": {
                "reqs": [ "awk", "date", "sysctl" ],
                "vars": [],
                "type": "float64",
                "task": "t1=$(date +%s); t0=$(sysctl -a | awk '/kern.boottime/ {print substr($5, 1, length($5)-1)}'); diff=$(($t1-$t0)); echo $diff"
            },
            "UNIX_CAT": {
                "reqs": [ "cat" ],
                "vars": [ "#VAR1#", "#VAR2#", "#VAR3#", "#VAR4#" ],
                "type": "float64",
                "task": "cat #VAR1##VAR2##VAR3##VAR4#"
            },
            "UNIX_PING": {
                "reqs": [ "ping" ],
                "vars": [ "#VAR1#", "#VAR2#" ],
                "type": "uint64",
                "task": "ping -c 1 #VAR1# | awk -F '/' '/#VAR2#/ {print $5;}'"
            },
            "UNIX_PSGREP": {
                "reqs": [ "echo", "grep", "ps" ],
                "vars": [ "#VAR1#" ],
                "type": "float64",
                "task": "ps cax | grep #VAR1# 2>&1 > /dev/null; if [ $? -eq 0 ]; then echo 1; else echo 0; fi"
            }
        }
    },
    "sustainment": { "protocol": [ "exec", "ssh" ] },
    "control": {
        "root": "./vendor/github.com/freeboard/freeboard/",
        "frequency": "500",
        "duration": "0",
        "reports" : {
            "AVG": { "op": "sum(y) / size(y)" },
            "DIFF": { "op": "y1 - y0" },
            "MIN": { "op": "y1 < y0" },
            "MAX": { "op": "y1 > y0" },
            "RATE": { "op": "(y1 - y0) / (x1 - x0)" },
            "RAW": { "op": "y" }
        }
    }
}
