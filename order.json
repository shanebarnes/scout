{
    "mission": "aws cluster network activity monitoring",
    "situation": {
        "targets": [ "MAC1" ],
        "definitions": {
            "LIN1": {
                "name": "Virtual Box",
                "addr": [ "192.168.1.83" ],
                "cred": "FEDORA25",
                "prot": "SSH",
                "sys": [ "LINUX", "UNIX" ]
            },
            "MAC1": {
                "name": "MacBook Pro",
                "addr": [ "" ],
                "cred": "EXEC",
                "prot": "EXEC",
                "sys": [ "MACOS", "UNIX" ]
            }
        },
        "credentials": {
            "EXEC": {
                "user": "",
                "pass": "",
                "cert": ""
            },
            "FEDORA25": {
                "user": "user",
                "pass": "pass",
                "cert": "cert.pem"
            }
        }
    },
    "execution": {
        "tasks": {
            "LINUX_CPU_USE": {
                "active": true,
                "sys": "LINUX",
                "desc": [ "total cpu use" ],
                "task": "LINUX_GREP",
                "vars": [
                    [ " " ]
                ],
                "reports": [ "RAW" ],
                "scale": [ 1 ],
                "units": [ "%" ]
            },
            "LINUX_NET_BYTES": {
                "active": true,
                "sys": "LINUX",
                "desc": [ "network enp0s3 rx bytes", "network enp0s3 tx bytes" ],
                "task": "UNIX_CAT",
                "vars": [
                    [ "/sys/class/net/", "enp0s3", "/statistics/", "rx_bytes" ],
                    [ "/sys/class/net/", "enp0s3", "/statistics/", "tx_bytes" ]
                ],
                "reports": [ "RAW", "RATE" ],
                "scale": [ 1, 8 ],
                "units": [ "B", "bps" ]
            },
            "LINUX_NET_RTT_MS": {
                "active": true,
                "sys": "LINUX",
                "desc": [ "average ping in ms" ],
                "task": "UNIX_PING",
                "vars": [
                    [ "192.168.1.254", "rtt" ]
                ],
                "reports": [ "RAW" ],
                "scale": [ 1 ],
                "units": [ "ms" ]
            },
            "LINUX_UPTIME_SEC": {
                "active": true,
                "sys": "LINUX",
                "desc": [ "uptime in seconds" ],
                "task": "UNIX_CAT",
                "vars": [
                    [ "/proc/uptime", " | awk '{print $1}'", "", "" ]
                ],
                "reports": [ "RAW" ],
                "scale": [ 1 ],
                "units": [ "sec" ]
            },
            "MACOS_CPU_USE": {
                "active": true,
                "sys": "MACOS",
                "desc": [ "total cpu use" ],
                "task": "MACOS_TOP",
                "vars": [
                    []
                ],
                "reports": [ "RAW" ],
                "scale": [ 1 ],
                "units": [ "%" ]
            },
            "MACOS_NET_BYTES": {
                "active": true,
                "sys": "MACOS",
                "desc": [ "network en0 rx bytes", "network en0 tx bytes" ],
                "task": "MACOS_NETSTAT",
                "vars": [
                    [ "en0", "7" ],
                    [ "en0", "10" ]
                ],
                "reports": [ "DIFF", "RAW", "RATE" ],
                "scale": [ 1, 1, 8 ],
                "units": [ "B", "B", "bps" ]
            },
            "MACOS_NET_RTT_MS": {
                "active": true,
                "sys": "MACOS",
                "desc": [ "average ping in ms" ],
                "task": "UNIX_PING",
                "vars": [
                    [ "google.com", "round-trip" ]
                ],
                "reports": [ "RAW" ],
                "scale": [ 1 ],
                "units": [ "ms" ]
            },
            "MACOS_UPTIME_SEC": {
                "active": true,
                "sys": "MACOS",
                "desc": [ "uptime in seconds" ],
                "task": "MACOS_UPTIME_SEC",
                "vars": [
                     []
                ],
                "reports": [ "RAW" ],
                "scale": [ 1 ],
                "units": [ "sec" ]
            }
        },
        "definitions": {
            "LINUX_GREP": {
                "reqs": [ "awk", "grep" ],
                "vars": [ "#VAR1#" ],
                "type": "float64",
                "task": "grep 'cpu#VAR1#' /proc/stat | awk '{usage=($2+$4)*100/($2+$4+$5)} END {print usage}'"
            },
            "MACOS_NETSTAT": {
                "reqs": [ "awk", "netstat" ],
                "vars": [ "#VAR1#", "#VAR2#" ],
                "type": "uint64",
                "task": "netstat -ibn -I #VAR1# | awk '//{i++}i==2{print $#VAR2#;exit}'"
            },
            "MACOS_TOP": {
                "reqs": [ "awk", "top" ],
                "vars": [],
                "type": "float64",
                "task": "top -l 1 -n 0 | awk '/^CPU usage/ {print $3+$5;}'"
            },
            "MACOS_UPTIME_SEC": {
                "reqs": [ "awk", "date", "sysctl" ],
                "vars": [],
                "type": "float64",
                "task": "t1=$(date +%s); t0=$(sysctl -a | awk '/kern.boottime/ {print substr($5, 1, length($5)-1)}'); diff=$(($t1-$t0)); echo $diff"
            },
            "UNIX_CAT": {
                "reqs": [ "cat" ],
                "vars": [ "#VAR1#", "#VAR2#", "#VAR3#", "#VAR4#" ],
                "type": "float64",
                "task": "cat #VAR1##VAR2##VAR3##VAR4#"
            },
            "UNIX_PING": {
                "reqs": [ "ping" ],
                "vars": [ "#VAR1#", "#VAR2#" ],
                "type": "uint64",
                "task": "ping -c 1 #VAR1# | awk -F '/' '/#VAR2#/ {print $5;}'"
            }
        }
    },
    "sustainment": { "protocol": [ "exec", "ssh" ] },
    "control": {
        "root": "./vendor/github.com/freeboard/freeboard/",
        "frequency": "500",
        "duration": "0",
        "reports" : {
            "AVG": { "op": "sum(y) / size(y)" },
            "DIFF": { "op": "y1 - y0" },
            "MIN": { "op": "y1 < y0" },
            "MAX": { "op": "y1 > y0" },
            "RATE": { "op": "(y1 - y0) / (x1 - x0)" },
            "RAW": { "op": "y" }
        }
    }
}
