{
    "mission": "aws cluster network activity monitoring",
    "situation": {
        "targets": [ "MAC1" ],
        "definitions": {
            "LIN1": {
                "name": "virtual box",
                "addr": "192.168.1.83",
                "cred": "FEDORA25",
                "prot": "SSH"
            },
            "MAC1": {
                "name": "macOS",
                "addr": "",
                "cred": "EXEC",
                "prot": "EXEC"
            }
        },
        "credentials": {
            "EXEC": {
                "user": "",
                "pass": "",
                "cert": ""
            },
            "FEDORA25": {
                "user": "user",
                "pass": "pass",
                "cert": "cert.pem"
            }
        }
    },
    "execution": {
        "tasks": {
            "ENP0S3_RX_RATE": {
                "active": true,
                "task": "LINUX_NET_RX_BYTES",
                "vars": [ "enp0s3" ],
                "reports": [ "RATE" ],
                "scale": 8,
                "units": "bps"
            },
            "EN0_RX_RATE": {
                "active": true,
                "task": "MACOS_NET_RX_BYTES",
                "vars": [ "en0" ],
                "reports": [ "RATE" ],
                "scale": 8,
                "units": "bps"
            }
        },
        "definitions": {
            "LINUX_ALL_CPU_USE": {
                "desc": "all cpu use",
                "reqs": [ "awk", "grep" ],
                "vars": [],
                "type": "float64",
                "task": "grep 'cpu ' /proc/stat | awk '{usage=($2+$4)*100/($2+$4+$5)} END {print usage}'"
            },
            "LINUX_CORE_CPU_USE": {
                "desc": "core cpu use",
                "reqs": [ "awk", "grep" ],
                "vars": [ "#VAR1#" ],
                "type": "float64",
                "task": "grep 'cpu#VAR1#' /proc/stat | awk '{usage=($2+$4)*100/($2+$4+$5)} END {print usage}'"
            },
            "LINUX_NET_RX_BYTES": {
                "desc": "net rx bytes",
                "reqs": [ "cat" ],
                "vars": [ "#VAR1#" ],
                "type": "uint64",
                "task": "cat /sys/class/net/#VAR1#/statistics/rx_bytes"
            },
            "LINUX_NET_TX_BYTES": {
                "desc": "net tx bytes",
                "reqs": [ "cat" ],
                "vars": [ "#VAR1#" ],
                "type": "uint64",
                "task": "cat /sys/class/net/#VAR1#/statistics/tx_bytes"
            },
            "MACOS_NET_RX_BYTES": {
                "desc": "net rx bytes",
                "reqs": [ "awk", "netstat" ],
                "vars": [ "#VAR1#" ],
                "type": "uint64",
                "task": "netstat -ibn -I #VAR1# | awk '//{i++}i==2{print $7;exit}'"
            },
            "MACOS_NET_TX_BYTES": {
                "desc": "net tx bytes",
                "reqs": [ "awk", "netstat" ],
                "vars": [ "#VAR1#" ],
                "type": "uint64",
                "task": "netstat -ibn -I #VAR1# | awk '//{i++}i==2{print $10;exit}'"
            }
        }
    },
    "sustainment": { "protocol": [ "exec", "ssh" ] },
    "control": {
        "frequency": "500",
        "duration": "0",
        "reports" : {
            "AVG": { "op": "x / t" },
            "MIN": { "op": "x < x0" },
            "MAX": { "op": "x > x0" },
            "RATE": { "op": "(x - x0) / (t - t0)" },
            "RAW": { "op": "x" }
        }
    }
}
