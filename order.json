{
    "mission": "aws cluster network activity monitoring",
    "situation": {
        "targets": [ "LIN1", "MAC1" ],
        "definitions": {
            "LIN1": {
                "name": "Virtual Box",
                "addr": [ "192.168.1.83" ],
                "cred": "FEDORA25",
                "prot": "SSH",
                "sys": [ "LINUX", "UNIX" ]
            },
            "MAC1": {
                "name": "MacBook Pro",
                "addr": [ "" ],
                "cred": "EXEC",
                "prot": "EXEC",
                "sys": [ "MACOS", "UNIX" ]
            }
        },
        "credentials": {
            "EXEC": {
                "user": "",
                "pass": "",
                "cert": ""
            },
            "FEDORA25": {
                "user": "user",
                "pass": "pass",
                "cert": "cert.pem"
            }
        }
    },
    "execution": {
        "tasks": {
            "LINUX_CPU_USE": {
                "active": true,
                "sys": "LINUX",
                "task": "LINUX_GREP",
                "vars": [
                    [ " " ]
                ],
                "reports": [ "RAW" ],
                "scale": 1,
                "units": "%"
            },
            "LINUX_NET_BYTES": {
                "active": true,
                "sys": "LINUX",
                "task": "UNIX_CAT",
                "vars": [
                    [ "/sys/class/net/", "enp0s3", "/statistics/", "rx_bytes" ],
                    [ "/sys/class/net/", "enp0s3", "/statistics/", "tx_bytes" ]
                ],
                "reports": [ "RAW", "RATE" ],
                "scale": 8,
                "units": "bps"
            },
            "LINUX_NET_RTT_MS": {
                "active": true,
                "sys": "LINUX",
                "task": "UNIX_PING",
                "vars": [
                    [ "192.168.1.254", "rtt" ]
                ],
                "reports": [ "RAW" ],
                "scale": 1,
                "units": "ms"
            },
            "MACOS_CPU_USE": {
                "active": true,
                "sys": "MACOS",
                "task": "MACOS_TOP",
                "vars": [
                    []
                ],
                "reports": [ "RAW" ],
                "scale": 1,
                "units": "%"
            },
            "MACOS_NET_BYTES": {
                "active": true,
                "sys": "MACOS",
                "task": "MACOS_NETSTAT",
                "vars": [
                    [ "en0", "7" ],
                    [ "en0", "10" ]
                ],
                "reports": [ "RAW", "RATE" ],
                "scale": 8,
                "units": "bps"
            },
            "MACOS_NET_RTT_MS": {
                "active": true,
                "sys": "MACOS",
                "task": "UNIX_PING",
                "vars": [
                    [ "google.com", "round-trip" ]
                ],
                "reports": [ "RAW" ],
                "scale": 1,
                "units": "ms"
            }
        },
        "definitions": {
            "LINUX_GREP": {
                "desc": "core cpu use",
                "reqs": [ "awk", "grep" ],
                "vars": [ "#VAR1#" ],
                "type": "float64",
                "task": "grep 'cpu#VAR1#' /proc/stat | awk '{usage=($2+$4)*100/($2+$4+$5)} END {print usage}'"
            },
            "MACOS_NETSTAT": {
                "desc": "net rx bytes",
                "reqs": [ "awk", "netstat" ],
                "vars": [ "#VAR1#", "#VAR2#" ],
                "type": "uint64",
                "task": "netstat -ibn -I #VAR1# | awk '//{i++}i==2{print $#VAR2#;exit}'"
            },
            "MACOS_TOP": {
                "desc": "all cpu use",
                "reqs": [ "awk", "top" ],
                "vars": [],
                "type": "float64",
                "task": "top -l 1 -n 0 | awk '/^CPU usage/ {print $3+$5;}'"
            },
            "UNIX_CAT": {
                "desc": "cat",
                "reqs": [ "cat" ],
                "vars": [ "#VAR1#", "#VAR2#", "#VAR3#", "#VAR4#" ],
                "type": "float64",
                "task": "cat #VAR1##VAR2##VAR3##VAR4#"
            },
            "UNIX_PING": {
                "desc": "average ping in ms",
                "reqs": [ "ping" ],
                "vars": [ "#VAR1#", "#VAR2#" ],
                "type": "uint64",
                "task": "ping -c 1 #VAR1# | awk -F '/' '/#VAR2#/ {print $5;}'"
            }
        }
    },
    "sustainment": { "protocol": [ "exec", "ssh" ] },
    "control": {
        "frequency": "500",
        "duration": "0",
        "reports" : {
            "AVG": { "op": "x / t" },
            "MIN": { "op": "x < x0" },
            "MAX": { "op": "x > x0" },
            "RATE": { "op": "(x - x0) / (t - t0)" },
            "RAW": { "op": "x" }
        }
    }
}
